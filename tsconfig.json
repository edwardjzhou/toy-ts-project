{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "strict": true,
        // "strict": false,
        "esModuleInterop": true,
        "outDir": "dist",
        "baseUrl": "src",
        "experimentalDecorators": true,
        "paths": {
            "model/*": ["./model/*"]
        },
        "moduleResolution": "node",
        "pretty": true,
        "emitDecoratorMetadata" : true,
        "noEmit": false
    },
    "files": [
        "src/app.ts"
    ]
}